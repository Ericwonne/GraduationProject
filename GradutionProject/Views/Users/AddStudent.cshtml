    function resetInputs() {
        var inputs = document.forms['addStudentInfo'].getElementsByTagName('input');
        for (var i = 0; i < inputs.length - 2; i++) {   // length-2 means get excluded the submit
            inputs[i].value = '';
        }
    }
    function validation() {
        var inputs = document.forms['addStudentInfo'].getElementsByTagName('input');
        for (var i = 0; i < inputs.length - 2; i++) {
            if (inputs[i].value == '') {
                alert("您有未填写项，请完成填写再提交！");
                return false;
            }
            else {
                //此处作处理
            }
        }
        return true;
    }
    function transferValue(name, value) {
        document.getElementById(name).value = value;
    }
</script>
