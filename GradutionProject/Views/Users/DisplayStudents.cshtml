
@{
    ViewBag.Title = "DisplayStudents";
}

<style type="text/css">
    td.alt {
        background-color: #ffc;
        background-color: rgba(230, 127, 34, 0.2);
    }
</style>

<h2>学生列表</h2>
<br />
<div class="container">
    <div class="input-group">
        <div class="input-group-addon"><i class="fa fa-search fa-lg"></i>&nbsp;</div>
        <input class="form-control" type="search" id="input-filter" size="15" placeholder="搜索表格中的条目" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>姓名 </th>
                <th>性别</th>
                <th>年龄</th>
                <th>邮箱</th>
                <th>手机</th>
                <th>QQ</th>
                <th>毕业院校</th>
                <th>专业</th>
                <th>未获学位</th>
                <th>年级</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow rows in Model.Rows)
            {
                <tr>
                    <td><a style="color:blue" href="SpecificUser?id=@rows[0]">@rows[1]</a></td>
                    <td>@rows[2]</td>
                    <td>@rows[3]</td>
                    <td>@rows[4]</td>
                    <td>@rows[7]</td>
                    <td>@rows[6]</td>
                    <td>@rows[8]</td>
                    <td>@rows[10]</td>
                    <td>@rows[11]</td>
                    <td>@rows[12]</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="http://cdn.bootcss.com/jquery/1.11.0/jquery.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.filtertable.min.js"></script>
<script>
    $(document).ready(function () {
        $('table').filterTable({ // apply filterTable to all tables on this page
            inputSelector: '#input-filter' // use the existing input instead of creating a new one
        });
    });
</script>

