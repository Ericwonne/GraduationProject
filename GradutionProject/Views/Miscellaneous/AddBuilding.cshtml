@model System.Data.DataTable
@{
    ViewBag.Title = "AddBuilding";
}

<h2>AddBuilding</h2>
<br />
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                @foreach (var col in Model.Columns)
                {
                    <th>@col</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow rows in Model.Rows)
            {
                <tr>
                    <td>@rows["code"]</td>

                    <td><a href="#">@rows["name"]</a></td>
                </tr>

            }
        </tbody>
    </table>
</div>

